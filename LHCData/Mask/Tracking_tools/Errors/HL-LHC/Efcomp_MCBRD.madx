exec new_magnetindividual(MCBRDH,iap);
exec errorgenerate_abs(MCBRDH, inv_MCBRD, 0, klRef_MCBRDH);

!MCBRDH.L5
iap=2;
if(mylhcbeam==1){
    inv_MCBRD=0;
    klRef_MCBRDH = sign_MCBRDH.4L5.B1*klRef_MCBRDH_abs;
};
if(mylhcbeam>1){
