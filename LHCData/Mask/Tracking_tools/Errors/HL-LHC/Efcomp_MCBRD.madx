    if (ver_hllhc_optics==1.4){ inv_MCBRD=0; };   if (ver_hllhc_optics==1.5){ inv_MCBRD=1; };
    klRef_MCBRDH = sign_MCBRDH.4R5.B1*klRef_MCBRDH_abs;
};
if(mylhcbeam>1){
    if (ver_hllhc_optics==1.4){ inv_MCBRD=1; };   if (ver_hllhc_optics==1.5){ inv_MCBRD=0; };
